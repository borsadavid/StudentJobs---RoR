%h1
  Edit Company information

= form_for @company_information, url: company_information_path(@company_information), remote: true do |f|

  .form-group
    = f.label :name
    = f.text_field :name, required: true, class: 'form-control', value: @company_information.name

  .form-group
    = f.label :country
    = f.text_field :country, required: true, class: 'form-control', value: @company_information.country

  .form-group
    = f.label :address
    = f.text_field :address, required: true, class: 'form-control', value: @company_information.address

  .form-group
    = f.label :phone_number
    = f.text_field :phone_number, required: true, pattern: "\\d{10}", title: "Please enter a 10-digit phone number", class: 'form-control', value: @company_information.phone_number

  .modal-buttons
    = f.submit "Update Information", class: "btn btn-primary btn-wd btn-lg btn-round", onclick: "handleFormSubmission(this.form)"

