
- if is_user?(current_user.id)
  %div.left
    %div.Availablecv
      %h1 Available CVs
      - @cv.each_with_index do |cv, index|
        - if index.even? # Apply class for even indices
          %div.edit-cv.same-line
            %span.CVs= cv.title
            = link_to "Edit CV", configure_cv_cv_path(cv.id), class: "edit-button"
        - else # Apply class for odd indices
          %div.edit-cv.new-line
            %span.CVs= cv.title
            = link_to "Edit CV", configure_cv_cv_path(cv.id), class: "edit-button"


    = render "cv/create_cv"



%div.right
  - if is_company?(current_user.id)
    - if current_user.company_information.present?
      = render 'company_information/edit_form'
    - else
      = render 'company_information/form'
    - if !current_user.enabled
      Awaiting account validation

  - else 
    - if current_user.user_information.present?
      = render 'user_information/edit_form'
    - else 
      = render 'user_information/form'
    


%h3 Cancel

= button_to "Cancel my account", registration_path(current_user), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete 

= javascript_include_tag 'cv'

