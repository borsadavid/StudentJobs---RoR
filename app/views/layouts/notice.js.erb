$("#flash-messages").append("<%= @message %>").show();

if @job.present? && ($(".job-info#<%= @job.id %>").length > 0) {
  $(".job-info#<%= @job.id %>").html("<%= j render 'job/view', job: @job %>").show();
}

setTimeout(function() {
  $("#flash-messages").fadeOut('slow', function() {
    $(this).empty();
  });
}, 2000);