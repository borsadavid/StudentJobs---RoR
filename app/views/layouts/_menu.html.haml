%nav.menu
  %div.search 
    = form_tag feed_path, method: :get, class: "search-form" do
      = text_field_tag :title, params[:title], placeholder: "Search jobs", class: "inputfield"
      = submit_tag "üîç", class: "search-button"
  %div.buttons
    - if user_signed_in?
      = link_to "Feed", feed_path, class: "button#{" active" if controller_name == 'home'}"
      - if is_company_enabled?(current_user.id)
        = link_to "Jobs", job_index_path, class: "button#{" active" if controller_name == 'job'}"
      = link_to "Profile", profile_index_path, class: "button#{" active" if controller_name == 'profile'}"
      - if is_admin?(current_user.id)
        = link_to "Available Skills", skill_index_path, class: "button#{" active" if controller_name == 'skill'}"
        = link_to "Admin", admin_index_path, class: "button#{" active" if controller_name == 'admin'}"
      = link_to "Log Out", destroy_user_session_path, class: "signinbutton", method: :delete 
    - else
      = link_to "Log in", new_user_session_path, class: "signinbutton"
      