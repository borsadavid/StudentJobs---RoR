%nav.menu
  %ul.buttons
    = form_tag feed_path, method: :get, class: "search-form" do
      = text_field_tag :title, params[:title], placeholder: "Search jobs"
      = submit_tag "üîç", class: "search-button"
    - if user_signed_in?
      = link_to "Feed", feed_path, class: "button"
      - if is_company?(current_user.id)
        = link_to "Jobs", job_index_path, class: "button"
      = link_to "Profile", profile_index_path, class: "button"
      = link_to "Available Skills", skill_index_path, class: "button"
      = button_to "Log Out", destroy_user_session_path, class: "log_out_Button", method: :delete 
    - else
      = button_to "Log In", new_user_session_path, class: "log_out_Button"
      