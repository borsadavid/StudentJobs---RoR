%h1 
  Add Experience:
= form_for @experience, url: create_experience_cv_path(cv_id: @cv.id), remote: true do |f|

  .form-group
    = f.label :title, "Title"
    = f.text_field :title, required: true, class: 'form-control'
  
  .form-group
    = f.label :employer, "Employer"
    = f.text_field :employer, required: true, class: 'form-control'

  .form-group
    = f.label :description, "Description"
    = f.text_field :description, required: true, class: 'form-control'

  .form-group
    = f.label :started_at, "Started at"
    = f.date_field :started_at, required: true, class: 'form-control'

  .form-group
    = f.label :finished_at, "Finished at"
    = f.date_field :finished_at, class: 'form-control', name: "experience[finished_at]"

  .form-group
    = f.label :ongoing, "Ongoing"
    = f.check_box :ongoing, class: 'form-control', onchange: "disableFinishDate(this)"

  .modal-buttons
    = f.submit "Save", class: "btn btn-primary btn-wd btn-lg btn-round", onclick: "handleFormSubmission(this.form);"

= javascript_include_tag 'cv'


