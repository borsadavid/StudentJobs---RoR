%h1 
  Add Education:
= form_for @education, url: create_education_cv_path(cv_id: @cv.id) do |f|

  .form-group
    = f.label :institution, "Institution name"
    = f.text_field :institution, required: true, class: 'form-control'
  
  .form-group
    = f.label :specialization, "Specialization name"
    = f.text_field :specialization, required: true, class: 'form-control'

  .form-group
    = f.label :degree, "Degree"
    = f.select :degree, ["Bachelor", "Master", "Doctoral"], { include_blank: "Select a degree" }, required: true, class: 'form-control'

  .form-group
    = f.label :started_at, "Started at"
    = f.date_field :started_at, required: true, class: 'form-control'

  .form-group
    = f.label :finished_at, "Finished at"
    = f.date_field :finished_at, class: 'form-control', id: 'finished_at_field_1'

  .form-group
    = f.label :ongoing, "Ongoing"
    = f.check_box :ongoing, class: 'form-control', id: 'ongoing_checkbox_1'

  .modal-buttons
    = f.submit "Save", class: "btn btn-primary btn-wd btn-lg btn-round"


= javascript_include_tag 'cv'
:javascript
  $(document).ready(function() {
    handleOngoingCheckbox(1);
  })